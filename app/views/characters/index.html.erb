<h1>Listing characters</h1>

<table>
  <tr>
    <th>Seed</th>
    <th>Name</th>
    <th>Touch</th>
    <th>Default</th>
    <th>Length</th>
    <th>Sort no</th>
    <th>Deleted at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%= character.seed %></td>
    <td><%= character.name %></td>
    <td><%= character.touch %></td>
    <td><%= character.default %></td>
    <td><%= character.length %></td>
    <td><%= character.sort_no %></td>
    <td><%= character.deleted_at %></td>
    <td><%= link_to 'Show', character %></td>
    <td><%= link_to 'Edit', edit_character_path(character) %></td>
    <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


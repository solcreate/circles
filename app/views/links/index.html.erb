<h1>Listing links</h1>

<table>
  <tr>
    <th>Node</th>
    <th>Linked</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.node %></td>
    <td><%= link.linked_id %></td>
    <td><%= link.type %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

